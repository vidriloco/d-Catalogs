<ul class="catalog">
	<li class="section"><%= t('catalogs.mini.new_items') %></li>
	<li class="group">
		<ul id="new-slider">
			<div class="slides-container">
				<% if @new_items.empty? %>
					<div>
						<h3><%= t('app.views.embed.new_stock.empty') %></h3>
					</div>
				<% else %>
					<% @new_items.each do |item| %>
						<li class="item">
							<div>
								<div class="image"><%= image_tag(item.image_field) unless item.image_field.nil? %></div>
								<div class="info">
									<p class="ff"><%= item.first_field %></p>
									<p class="sf"><%= item.second_field %></p>
									<p class="tf"><%= item.extra %></p>
								</div>
							</div>
						</li>
					<% end %>
				<% end %>
			</div>
		</ul>
	</li>
	
	<li class="section"><%= t('catalogs.mini.discounts') %></li>
	<li class="group">
		<ul id="discounts-slider">
			<div class="slides-container">
				<% if @discounts.empty? %>
					<div>
						<h3><%= t('app.views.embed.new_stock.empty') %></h3>
					</div>
				<% else %>
					<% @discounts.each do |discount| %>
						<% item = discount.discountable %>
						<li class="item">
							<div>
								<div class="image"><%= image_tag(item.image_field) unless item.image_field.nil? %></div>
								<div class="info">
									<p class="ff"><%= item.first_field %></p>
									<p class="sf"><%= item.second_field %></p>
									<p class="tf"><%= item.extra %></p>
								</div>
							</div>
						</li>
					<% end %>
				<% end %>
			</div>
		</ul>
	</li>
	<li class="subsection">
		<ul>
			<%= stock_status_for(MusicBox, :cd) %>
			<%= stock_status_for(MusicBox, :vinil) %>
			<%= stock_status_for(Book) %>
			<%= stock_status_for(Item, :accessory) %>
			<%= stock_status_for(Item, :equipment) %>
			<%= stock_status_for(PreSale) %>
		</ul>
	</li>

</ul>