<%= form_for @discount, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :active, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :active, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :percent_off, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :percent_off, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :discountable_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :discountable_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :discountable_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :discountable_type, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                discounts_path, :class => 'btn' %>
  </div>
<% end %>
