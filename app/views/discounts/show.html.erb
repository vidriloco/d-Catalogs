<%- model_class = Discount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @discount.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @discount.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:percent_off) %>:</strong></dt>
  <dd><%= @discount.percent_off %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discountable_id) %>:</strong></dt>
  <dd><%= @discount.discountable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discountable_type) %>:</strong></dt>
  <dd><%= @discount.discountable_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              discounts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_discount_path(@discount), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              discount_path(@discount),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
