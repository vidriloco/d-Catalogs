<%- model_class = PreSale -%>
<div class="big-panel admin">
	<div class="page-header">
	  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
	</div>

	<dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:event) %>:</strong></dt>
	  <dd><%= @pre_sale.event %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
	  <dd><%= @pre_sale.date.in_time_zone("Mexico City").to_s(:short) %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
	  <dd><%= @pre_sale.price %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
	  <dd><%= @pre_sale.description %></dd>
	</dl>

	<div class="form-actions">
	  <%= link_to t('app.controls.back'),
	              pre_sales_path, :class => 'btn'  %>
	  <%= link_to t('app.controls.edit'),
	              edit_pre_sale_path(@pre_sale), :class => 'btn' %>
	  <%= link_to t('app.controls.destroy'),
	              pre_sale_path(@pre_sale),
	              :method => 'delete',
	              :confirm => t('app.views.pre_sales.dialogs.destroy_confirmation'),
	              :class => 'btn btn-danger' %>
	</div>
</div>